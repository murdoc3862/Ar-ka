mixin header()
    include ../../section/ui-kit/button.pug
    include ../../section/ui-kit/icon.pug

    +b.header(class!=attributes.class).js-header
        .b-container.b-container--main
            +e.wrapper

                if main
                    +e.logo-wrapper
                        +e('img').logo(src='images/inhtml/logo-part1.svg')
                        +icon('logo-part2').--logo-part2
                else
                    +e('a').logo-wrapper(href='/', title='Aurinko')
                        +e('img').logo(src='images/inhtml/logo-part1.svg')
                        +icon('logo-part2').--logo-part2

                +e.nav
                    +e.nav-burger.js-header-burger
                    +b.nav-overlay.js-header-burger-overlay
                        +e.content
                            +e.logo-wrapper
                                +e('img').logo(src='images/inhtml/logo-part1.svg')
                                if main
                                    +icon('logo-part2').--logo-part2
                            +b('nav').nav
                                +e('ul').list
                                    +e('li').item.--inner
                                        +e('a').link(href='javascript:void(0);', title='OUR APPS Powered by Aurinko', data-dropdown-link='header-desctop').--inner
                                            +e('span').nav-text.--inner
                                                span Our Apps
                                                |  Powered by Aurinko
                                            +icon('toggle').--nav

                                        +e('ul').inner-list(data-dropdown-list='header-desctop', data-highlight="inactive")
                                            +e('li').inner-item
                                                +e('a').inner-link(href='/yoxel', title='').js-highlight-link
                                                    +e.item-logo-wrapper.--mobile.--yoxel
                                                        +e('img').item-logo(src='images/inhtml/yoxel.svg')
                                                    +e.item-logo-wrapper.--desktop
                                                        svg(width="23", height="29", viewBox="0 0 23 29", fill="none", xmlns="http://www.w3.org/2000/svg")
                                                            path(d="M8.71429 19.9745C8.36137 19.0241 2.66667 6.31293 0 0H5.42857L11.7143 14.648L17.5714 0H23C20.7143 5.37585 15.6571 17.3408 13.7143 22.1939C11.2857 28.2602 8.51908 29 6.42857 29H2.57143V24.5612H6.42857C8 24.5612 9.42857 21.898 8.71429 19.9745Z", fill="#231F20")
                                                    +e.desc
                                                        +e.title Yoxel
                                                        +e.text Smart inbox integrations for Salesforce
                                            +e('li').inner-item
                                                +e('a').inner-link(href='/pebbles', title='').js-highlight-link
                                                    +e.item-logo-wrapper.--mobile.--pebbles
                                                        +e('img').item-logo(src='images/inhtml/pebbles.svg')
                                                    +e.item-logo-wrapper.--desktop
                                                        svg(width="32" height="30" viewBox="0 0 32 30" fill="none" xmlns="http://www.w3.org/2000/svg")
                                                            path(fill-rule="evenodd" clip-rule="evenodd" d="M0 2.19512C0 0.982789 0.982415 0 2.19429 0L29.8057 0C31.0176 0 32 0.982789 32 2.19512C32 3.40745 31.0176 4.39024 29.8057 4.39024L2.19429 4.39024C0.982415 4.39024 0 3.40745 0 2.19512Z", fill="#F6921E")
                                                            path(fill-rule="evenodd" clip-rule="evenodd" d="M0 9.51226C0 8.29993 0.982415 7.31714 2.19429 7.31714L29.8057 7.31714C31.0176 7.31714 32 8.29993 32 9.51226C32 10.7246 31.0176 11.7074 29.8057 11.7074L2.19429 11.7074C0.982415 11.7074 0 10.7246 0 9.51226Z", fill="#00994E")
                                                            path(fill-rule="evenodd" clip-rule="evenodd" d="M2.19429 14.634C0.982415 14.634 0 15.6168 0 16.8292C0 18.0415 0.982415 19.0243 2.19429 19.0243H13.7141V27.8042C13.7141 29.0165 14.6965 29.9993 15.9084 29.9993C17.1202 29.9993 18.1026 29.0165 18.1026 27.8042V19.0243H29.8057C31.0176 19.0243 32 18.0415 32 16.8292C32 15.6168 31.0176 14.634 29.8057 14.634H2.19429Z", fill="#90278E")
                                                    +e.desc
                                                        +e.title Pebbles
                                                        +e.text Turn Slack threads into prioritized tasks
                                    +e('li').item
                                        +e('a').link(href='/about-aurinko', title='About Aurinko')
                                            +e('span').nav-text
                                                | About
                                                span  Aurinko
                                    +e('li').item
                                        +e('a').link(href='/pricing', title='Pricing')
                                            +e('span').nav-text Pricing
                            +e.buttons(class=`${main ? '' : '--nav'}`)
                                +b('a').button(href='/form-aurinko', title='Login').--menu Login
                                +b('a').button(href='/form-aurinko', title='Get Started').--color.--menu Get Started
                    +b.overlay.js-header-burger-overlay
                +e.buttons
                    if yoxel == true || pebbles == true
                        +b('a').button(href='/form-aurinko', title='Login').--menu Login
                    else
                        +b('a').button(href='/form-aurinko', title='Login').--menu Login
                        +b('a').button(href='/form-aurinko', title='Get Started').--color.--menu Get Started
               

    if pebbles == true
        +b.navbar.-sticky
            +e.wrapper
                .b-container.b-container--main
                    +e.comp
                        +e('a').title-link(href='/pebble.html', title='Pebbles').--pebbles
                            +e.logo-wrapper
                                +e('img').logo(src='images/inhtml/pebbles.svg')
                            +icon('toggle').--navbar
                        +e('ul').list
                            +e('li').item
                                +e('a').link(href='/pricing', title='Pricing').--pebbles Pricing
                        +e.buttons
                            +button('Contact us', true, '/bouble-menu-pebble').--desktop.--navbar.--collapsed.--collapsed-pebbles
                            +button('Get Started', true, '/form-aurinko').--navbar.--pebbles
            +e.collapsed-wrapper
                .b-container.b-container--main
                    +e('ul').collapsed-list
                        +e('li').collapsed-item
                            +e('a').collapsed-link(href='/pricing', title='Pricing').--pebbles Pricing
                        +e('li').collapsed-item
                            +b('a').button(href='/bouble-menu-pebble', title='Contact us').--collapsed.--collapsed-pebbles Contact us

    else if yoxel == true
        +b.navbar.-sticky
            +e.wrapper
                .b-container.b-container--main
                    +e.comp
                        +e('a').title-link(href='/yoxel.html', title='Yoxel').--yoxel
                            +e.logo-wrapper
                                +e('img').logo(src='images/inhtml/yoxel.svg')
                            +icon('toggle').--navbar
                        +e('ul').list
                            +e('li').item
                                +e('a').link(href='/pricing', title='Pricing').--yoxel Pricing
                        +e.buttons
                            +button('Contact us', true, '/bouble-menu-yoxel').--desktop.--navbar.--collapsed.--collapsed-yoxel
                            +button('Get Started', true, '/form-aurinko').--navbar.--yoxel
            +e.collapsed-wrapper
                .b-container.b-container--main
                    +e('ul').collapsed-list
                        +e('li').collapsed-item
                            +e('a').collapsed-link(href='/pricing', title='Pricing').--yoxel Pricing
                        +e('li').collapsed-item
                            +b('a').button(href='/bouble-menu-yoxel', title='Contact us').--collapsed.--collapsed-yoxel Contact us